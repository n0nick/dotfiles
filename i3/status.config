general {
  output_format = "i3bar"
  colors = true
  interval = 5
}

order += "disk /"
order += "disk /usr/local/google"
order += "ethernet eth0"
order += "load"
order += "volume master"
order += "tztime local"

disk "/" {
  format = "%avail"
}

disk "/usr/local/google" {
  format = "%avail"
}

ethernet eth0 {
  format_up = "E: %ip (%speed)"
  format_down = "E: down"
}

load {
  format = "%1min"
}

volume master {
  format = "♪: %volume"
  format_muted = "♪: %volume (muted)"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}

tztime local {
  format = "%Y-%m-%d %H:%M"
}
