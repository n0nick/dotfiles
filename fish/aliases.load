# Most of these were inspired by YADR
# https://github.com/skwp/dotfiles

# PS
function psa; ps aux $argv; end
function psg; ps aux | grep  $argv; end
function psr; ps aux | grep ruby $argv; end

# Moving around
function cdb; cd - $argv; end

# Show human friendly numbers and colors
function df; df -h $argv; end
function ll; ls -alGh $argv; end
function ls; ls -Gh $argv; end
function du; du -h -d 2 $argv; end

# show me files matching 'ls grep'
function lsg; ll | grep $argv; end

# Alias Editing
function ae; vim ~/.oh-my-fish/custom/aliases.load; end #alias edit
function ar; . ~/.oh-my-fish/custom/aliases.load; end #alias reload

# vim using
#TODO check for mvim
function vim; mvim -v $argv; end

# Vi/vim stickiness
function vi; vim $argv; end

