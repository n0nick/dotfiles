# Common shell functions
function less; less -r $argv; end
function tf; tail -f $argv; end
function l; ls $argv; end
function lh; ls -alt | head $argv; end # see the last modified files
function cl; clear $argv; end

# Some powder aliases
function pd; powder $argv; end
function pdr; powder restart $argv; end
function pdu; powder up $argv; end
function pdd; powder down $argv; end
function pdo; powder open $argv; end
function pdl; powder link $argv; end

# Gist is jist
function gist; jist $argv; end

# Some tmux shortcuts
function tmux; tmux -u $argv; end
function tn; tmux new-window $argv; end
function ta; tmux attach $argv; end
function td; tmux detach $argv; end
function tl; tmux list-sessions $argv; end

# Bundler shortcuts
function bdi; bundle install $argv; end

# Open file with Mou
function mou
  touch $argv; and open -a Mou $argv
end

# Shaft
function ss
  shaft stop --all
  if count $argv >/dev/null
    shaft start $argv
  end
end

# Zeus
function zs; zeus server $argv; end
function zc; zeus console $argv; end

# Rspec
function rs; rspec spec $argv; end

# Rails tasks
function rdm; rake db:migrate $argv; end
function rdmr; rake db:migrate:redo $argv; end
function rc; rails console $argv; end
function rac; rake assets:clean $argv; end
function r18; rake i18n:js:export $argv; end
function rds; rake debug:start $argv; end
function rdc; rake debug:connect $argv; end

# Mkdir and chdir
function mkdcd
  mkdir $argv
  cd $argv
end

# Goreplace
function gr; goreplace $argv; end
